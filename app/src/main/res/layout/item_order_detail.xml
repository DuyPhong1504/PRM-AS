<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/img"
                android:scaleType="fitXY"
                android:id="@+id/ivProductBanner"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:text="Product A"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:id="@+id/tvCheckoutProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/ivProductBanner"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:text="Checkout price: 200 USD"
                android:id="@+id/tvCheckoutPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/ivProductBanner"
                app:layout_constraintTop_toBottomOf="@id/tvCheckoutProduct" />

            <TextView
                android:text="Quantity 20"
                android:id="@+id/tvCheckoutQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/ivProductBanner"
                app:layout_constraintTop_toBottomOf="@id/tvCheckoutPrice" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>